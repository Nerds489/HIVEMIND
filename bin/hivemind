#!/usr/bin/env bash
#===============================================================================
# HIVEMIND v2.0 - TUI Launcher (NO CLI)
#===============================================================================

set -euo pipefail

SCRIPT_DIR="$(dirname "$(readlink -f "$0")")"
HIVEMIND_HOME="${HIVEMIND_HOME:-$(dirname "$SCRIPT_DIR")}"
TUI_DIR="${HIVEMIND_HOME}/tui"

# Launch TUI
cd "${TUI_DIR}"
exec python -m hivemind_tui "$@"

#!/usr/bin/env bash
#===============================================================================
# HIVEMIND v2.0 - TUI Launcher (NO CLI)
#===============================================================================

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
TUI_DIR="${SCRIPT_DIR}/tui"

# Launch TUI
cd "${TUI_DIR}"
exec python -m hivemind_tui "$@"

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://hivemind.local/schemas/memory-entry.json",
  "title": "HIVEMIND Memory Entry",
  "description": "Base schema for all memory entries in the HIVEMIND system",
  "type": "object",
  "required": ["id", "type", "created_at", "created_by", "content"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^MEM-[0-9]{8}-[A-Z0-9]{6}$",
      "description": "Unique memory identifier (MEM-YYYYMMDD-XXXXXX)"
    },
    "type": {
      "type": "string",
      "enum": ["factual", "procedural", "episodic", "semantic", "working"],
      "description": "Memory type classification"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO8601 timestamp of creation"
    },
    "created_by": {
      "type": "string",
      "pattern": "^(DEV|SEC|INF|QA)-[0-9]{3}$|^USER$|^SYSTEM$",
      "description": "Agent ID, USER, or SYSTEM"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO8601 timestamp of last update"
    },
    "updated_by": {
      "type": "string",
      "description": "Who last updated this memory"
    },
    "scope": {
      "type": "string",
      "enum": ["global", "team", "agent", "project", "session"],
      "default": "global",
      "description": "Memory visibility scope"
    },
    "scope_id": {
      "type": "string",
      "description": "Specific scope identifier (team name, agent ID, project ID)"
    },
    "title": {
      "type": "string",
      "maxLength": 200,
      "description": "Short descriptive title"
    },
    "summary": {
      "type": "string",
      "maxLength": 500,
      "description": "Brief summary for index display"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$"
      },
      "uniqueItems": true,
      "description": "Searchable tags"
    },
    "priority": {
      "type": "string",
      "enum": ["critical", "high", "normal", "low"],
      "default": "normal",
      "description": "Memory importance level"
    },
    "ttl": {
      "type": ["string", "null"],
      "pattern": "^[0-9]+[hdwmy]$",
      "description": "Time-to-live: null (permanent), '30d', '1y', etc."
    },
    "protected": {
      "type": "boolean",
      "default": false,
      "description": "If true, never auto-archive or delete"
    },
    "content": {
      "type": "object",
      "description": "Memory-type-specific content"
    },
    "references": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Referenced memory IDs or external resources"
    },
    "access_count": {
      "type": "integer",
      "minimum": 0,
      "default": 0,
      "description": "Number of times accessed"
    },
    "last_accessed": {
      "type": "string",
      "format": "date-time",
      "description": "Last access timestamp"
    },
    "version": {
      "type": "integer",
      "minimum": 1,
      "default": 1,
      "description": "Version number for tracking changes"
    },
    "version_history": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "version": {"type": "integer"},
          "timestamp": {"type": "string", "format": "date-time"},
          "author": {"type": "string"},
          "changes": {"type": "string"}
        }
      },
      "description": "History of changes"
    },
    "lifecycle": {
      "type": "string",
      "enum": ["active", "aging", "archived", "deleted"],
      "default": "active",
      "description": "Current lifecycle state"
    },
    "lifecycle_changed_at": {
      "type": "string",
      "format": "date-time",
      "description": "When lifecycle state last changed"
    }
  }
}

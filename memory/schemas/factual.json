{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://hivemind.local/schemas/factual.json",
  "title": "Factual Memory Content",
  "description": "Schema for factual memory content - facts, configurations, entities",
  "type": "object",
  "required": ["fact_type", "subject"],
  "properties": {
    "fact_type": {
      "type": "string",
      "enum": [
        "preference",
        "configuration",
        "codebase",
        "entity",
        "relationship",
        "specification",
        "constraint"
      ],
      "description": "Category of fact"
    },
    "subject": {
      "type": "string",
      "description": "What/who the fact is about"
    },
    "predicate": {
      "type": "string",
      "description": "The relationship or property being stated"
    },
    "object": {
      "type": ["string", "number", "boolean", "object", "array"],
      "description": "The value or related entity"
    },
    "context": {
      "type": "string",
      "description": "Contextual qualifier for when this fact applies"
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "default": 1.0,
      "description": "Confidence level (0.0-1.0)"
    },
    "source": {
      "type": "string",
      "enum": ["user_statement", "observation", "inference", "documentation", "system"],
      "description": "How this fact was learned"
    },
    "source_detail": {
      "type": "string",
      "description": "Additional source details"
    },
    "verified": {
      "type": "boolean",
      "default": false,
      "description": "Whether human-verified"
    },
    "verification_date": {
      "type": "string",
      "format": "date-time",
      "description": "When verified"
    },
    "verified_by": {
      "type": "string",
      "description": "Who verified"
    },
    "valid_from": {
      "type": "string",
      "format": "date-time",
      "description": "When this fact became true"
    },
    "valid_until": {
      "type": "string",
      "format": "date-time",
      "description": "When this fact expires (if temporal)"
    },
    "supersedes": {
      "type": "string",
      "description": "Memory ID this fact replaces"
    },
    "contradicts": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Memory IDs this fact contradicts"
    }
  }
}
